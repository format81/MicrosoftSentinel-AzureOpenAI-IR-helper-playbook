                                        "host":  {
                                            "connection":  {
                                                "name":  "@parameters('$connections')['azuresentinel_1']['connectionId']"
                                            }
                                        },
                                        "method":  "post",
                                        "path":  "/Incidents/CreateTask"
                                    }
                                }
                            },
                            "runAfter":  {
                                "Parse_JSON_-_ask_for_tasks":  [
                                    "Succeeded"
                                ]
                            },
                            "type":  "Foreach"
                        },
                        "AzureOpenAI_URI":  {
                            "runAfter":  {
                            },
                            "type":  "InitializeVariable",
                            "inputs":  {
                                "variables":  [
                                    {
