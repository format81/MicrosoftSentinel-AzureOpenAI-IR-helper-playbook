                                                "path":  "/Incidents/Comment"
                                            }
                                        }
                                    },
                                    "runAfter":  {
                                        "Parse_JSON_-_Add_Commenti_on_TTPs":  [
                                            "Succeeded"
                                        ]
                                    },
                                    "type":  "Foreach"
                                },
                                "OpenAI_API_-_Add_Commenti_on_TTPs":  {
                                    "runAfter":  {
                                    },
                                    "type":  "Http",
                                    "inputs":  {
                                        "body":  {
                                            "max_tokens":  4000,
                                            "prompt":  "@{variables('IR')}"
                                        },
                                        "headers":  {
                                            "Content-Type":  "application/json",
                                            "api-key":  "@{variables('api-key')}"
                                        },
