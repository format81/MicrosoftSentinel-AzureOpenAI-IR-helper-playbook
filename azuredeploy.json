                                        "OpenAI_API_-_Add_Commenti_on_TTPs":  [
                                            "Succeeded"
                                        ]
                                    },
                                    "type":  "ParseJson",
                                    "inputs":  {
                                        "content":  "@body('OpenAI_API_-_Add_Commenti_on_TTPs')",
                                        "schema":  {
                                            "properties":  {
                                                "choices":  {
                                                    "items":  {
                                                        "properties":  {
                                                            "finish_reason":  {
                                                                "type":  "string"
                                                            },
                                                            "index":  {
                                                                "type":  "integer"
                                                            },
                                                            "logprobs":  {
                                                            },
                                                            "text":  {
                                                                "type":  "string"
                                                            }
                                                        },
                                                        "required":  [
                                                            "text",
                                                            "index",
                                                            "finish_reason",
                                                            "logprobs"
                                                        ],
                                                        "type":  "object"
                                                    },
                                                    "type":  "array"
                                                },
                                                "created":  {
                                                    "type":  "integer"
                                                },
                                                "id":  {
